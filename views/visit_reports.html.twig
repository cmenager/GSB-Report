{% extends "layout.html.twig" %}
{% set reportMenu = true %}
{% block title %}Rapport de visite{% endblock %}
{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% if practitioners %}
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Practicien</th>
                        <th>Ville</th>
                        <th>Motif</th>
                    </tr>
                </thead>
                {% for report in reports %}
                    <tr>
                        <td>{{ report.date }}</td>
                        <td>{{ report.idPractitioner.name }}</td>
                        <td>{{ report.idPractitioner.city }}</td>
                        <td>{{ report.purpose }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="alert alert-warning">Aucun rapport de visite trouv√©.</div>
    {% endif %}
{% endblock %}